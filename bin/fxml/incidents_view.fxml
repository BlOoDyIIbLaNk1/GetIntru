<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.28" prefHeight="720.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.IncidentsController">

    <items>
        <!-- MASTER (gauche) -->
        <BorderPane>
            <top>
                <VBox spacing="8.0">
                    <padding><Insets bottom="8" left="12" right="12" top="12" /></padding>
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Incidents" />
                    <TextField fx:id="txtIncidentSearch" promptText="Rechercher incident (id, titre, status...)" />
                    <HBox spacing="8.0">
                        <Button onAction="#onRefreshIncidents" text="Refresh" />
                    </HBox>
                </VBox>
            </top>

            <center>
                <ListView fx:id="lstIncidents" />
            </center>

            <bottom>
                <Label fx:id="lblIncidentCount" style="-fx-text-fill: #555;" text="0 incident(s)">
                    <BorderPane.margin>
                        <Insets bottom="12" left="12" right="12" top="8" />
                    </BorderPane.margin>
                </Label>
            </bottom>
        </BorderPane>

        <!-- DETAIL (droite) : on inclut la 2Ã¨me interface -->
        <fx:include fx:id="alertsView" source="incident_alerts_view.fxml" />
    </items>
</SplitPane>
